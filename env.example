## Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

## Site URL (used server-side to derive Paytm callback URL when PAYTM_CALLBACK_URL is not set)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

## Paytm (required)
PAYTM_MERCHANT_ID=YOUR_PAYTM_MID
PAYTM_MERCHANT_KEY=YOUR_PAYTM_MERCHANT_KEY

## Paytm (optional)
PAYTM_WEBSITE=DEFAULT
PAYTM_ENVIRONMENT=staging
# Recommended in production so Paytm always posts back to the correct HTTPS endpoint
PAYTM_CALLBACK_URL=https://your-domain.com/api/paytm-callback

## Razorpay (optional; currently disabled in code)
# RAZORPAY_KEY_ID=
# RAZORPAY_KEY_SECRET=


